---
import MainLayout from '../layouts/MainLayout.astro';
import ProfileMode from '../components/ProfileMode.astro';
import { getEntry } from 'astro:content';

// Load profile data from content collection
const profileEntry = await getEntry('profile', 'index');
if (!profileEntry) {
	throw new Error('Profile content not found');
}

const { data: profileData } = profileEntry;
---

<MainLayout title="Home">
	<ProfileMode {...profileData} />
</MainLayout>
