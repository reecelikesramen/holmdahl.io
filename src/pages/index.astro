---
import '../styles/global.css';
import MainLayout from '../layouts/MainLayout.astro';
import ProfileMode from '../components/ProfileMode.astro';
import { getEntry } from 'astro:content';

// Load profile data from content collection
const profileEntry = await getEntry('profile', 'index');
if (!profileEntry) {
	throw new Error('Profile content not found');
}

const { data: profileData } = profileEntry;

// Set some CSS variables specifically for the profile mode
const cssVars = {
	'--header-height': '60px',
	'--footer-height': '60px',
	'--gap': '24px'
};
---

<MainLayout title="Home">
	<div style={cssVars}>
		<ProfileMode {...profileData} />
	</div>
</MainLayout>
