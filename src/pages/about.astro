---
import { getEntry } from 'astro:content';
import ContentLayout from '../layouts/ContentLayout.astro';

// Load about content from content collection
const aboutEntry = await getEntry('about', 'index');
if (!aboutEntry) {
  throw new Error('About content not found');
}

const { Content } = await aboutEntry.render();
const { title, description } = aboutEntry.data;
---

<ContentLayout title={title} description={description} hideTitle={true}>
  <Content />
</ContentLayout> 