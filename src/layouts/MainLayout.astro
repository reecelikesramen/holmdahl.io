---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  isDark?: boolean;
  pageType?: 'home' | 'post' | 'search' | 'about';
}

const { title, description, image, isDark = false, pageType = 'home' } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} isDark={isDark} pageType={pageType}>
  <Header slot="header" />    
  <slot />
  <Footer slot="footer" />
</BaseLayout> 