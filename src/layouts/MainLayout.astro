---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  isDark?: boolean;
}

const { title, description, image, isDark = false } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} isDark={isDark}>
  <Header slot="header" />    
  <slot />
  <Footer slot="footer" />
</BaseLayout> 