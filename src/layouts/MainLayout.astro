---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  isDark?: boolean;
}

const { title, description, image, isDark = false } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} isDark={isDark}>
  <Header slot="header" />
  <main class="flex-1 flex flex-col w-full max-w-3xl mx-auto px-4">
    <slot />
  </main>
  <Footer socialIcons={[{
    name: 'github',
    url: 'https://github.com/holmdahl',
  }]}/>
</BaseLayout> 