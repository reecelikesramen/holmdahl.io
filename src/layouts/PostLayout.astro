---
import MainLayout from './MainLayout.astro';
import { Moon, Sun } from 'lucide-react';

interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  updatedDate?: Date;
  readingTime?: number;
  tags?: string[];
  draft?: boolean;
  prevPost?: {
    title: string;
    url: string;
  };
  nextPost?: {
    title: string;
    url: string;
  };
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate, 
  readingTime, 
  tags = [], 
  draft = false,
  prevPost,
  nextPost
} = Astro.props;
---

<MainLayout title={title} description={description}>
  <article class="max-w-[65ch] mx-auto p-4">
    <header>
      <div class="mb-4 text-sm text-secondary-text">
        <a href="/" class="text-secondary-text hover:text-primary hover:underline no-underline">Home</a> » 
        <a href="/posts" class="text-secondary-text hover:text-primary hover:underline no-underline">Posts</a>
      </div>
      
      <h1 class="mt-0 mb-2 text-4xl font-bold flex items-center gap-2">
        {title}
        {draft && (
          <span class="entry-hint" title="Draft">
            <svg xmlns="http://www.w3.org/2000/svg" height="35" viewBox="0 -960 960 960" fill="currentColor">
              <path d="M160-410v-60h300v60H160Zm0-165v-60h470v60H160Zm0-165v-60h470v60H160Zm360 580v-123l221-220q9-9 20-13t22-4q12 0 23 4.5t20 13.5l37 37q9 9 13 20t4 22q0 11-4.5 22.5T862.09-380L643-160H520Zm300-263-37-37 37 37ZM580-220h38l121-122-18-19-19-18-122 121v38Zm141-141-19-18 37 37-18-19Z" />
            </svg>
          </span>
        )}
      </h1>
      
      {description && (
        <div class="mb-4 text-xl text-secondary-text">
          {description}
        </div>
      )}
      
      <div class="mb-8 text-tertiary-text text-sm">
        {pubDate && !isNaN(pubDate.getTime()) && (
          <span>
            {pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </span>
        )}
        
        {updatedDate && !isNaN(updatedDate.getTime()) && (
          <span>&nbsp;·&nbsp;Updated: {updatedDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}</span>
        )}
        
        {readingTime && (
          <span>&nbsp;·&nbsp;{readingTime} min read</span>
        )}
      </div>
    </header>
    
    <div class="mb-12 leading-relaxed">
      <slot />
    </div>
    
    <footer>
      {tags.length > 0 && (
        <ul class="flex flex-wrap gap-2 list-none p-0 mb-8">
          {tags.map(tag => (
            <li>
              <a 
                href={`/tags/${tag}`} 
                class="inline-block py-1 px-3 rounded bg-tag text-tag-text no-underline text-sm hover:bg-tag-hover"
              >
                {tag}
              </a>
            </li>
          ))}
        </ul>
      )}
      
      {(prevPost || nextPost) && (
        <nav class="flex gap-4 mt-8">
          {prevPost && (
            <a class="flex-1 p-4 rounded-lg bg-card border border-border no-underline text-content transition-colors hover:bg-hover" href={prevPost.url}>
              <span class="text-sm text-tertiary-text">« Prev</span>
              <br>
              <span>{prevPost.title}</span>
            </a>
          )}
          
          {nextPost && (
            <a class="flex-1 p-4 rounded-lg bg-card border border-border no-underline text-content transition-colors hover:bg-hover text-right" href={nextPost.url}>
              <span class="text-sm text-tertiary-text">Next »</span>
              <br>
              <span>{nextPost.title}</span>
            </a>
          )}
        </nav>
      )}
    </footer>
  </article>
</MainLayout>

<style>
  @reference "../styles/global.css";

  /* Global styles for post content that are difficult to target with Tailwind */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    @apply mt-8 mb-4;
  }
  
  .post-content :global(p),
  .post-content :global(ul),
  .post-content :global(ol) {
    @apply mb-4;
  }
</style> 