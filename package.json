{
  "private": true,
  "name": "holmdahl.io",
  "type": "module",
  "scripts": {
    "dev": "concurrently 'vite' 'hugo server --baseURL \"http://localhost:3000\"' 'node ./dev-server.js'",
    "build": "hugo --baseURL '/' && vite build --base '/' && shx cp ./serve.json ./dist/serve.json",
    "build:prod": "hugo --baseURL 'https://holmdahl.io' && vite build --base 'https://holmdahl.io'",
    "clean": "rm -rf public dist",
    "serve": "serve dist"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.2",
    "@types/file-saver": "^2.0.7",
    "@types/http-proxy": "^1.17.15",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "glob": "^11.0.0",
    "http": "^0.0.1-security",
    "http-proxy": "^1.18.1",
    "hugo-extended": "^0.142.0",
    "preact": "^10.25.4",
    "prettier": "^3.4.2",
    "prettier-plugin-go-template": "^0.0.15",
    "serve": "^14.2.4",
    "shx": "^0.3.4",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lint": "^6.8.4",
    "@uiw/codemirror-theme-vscode": "^4.23.6",
    "@uiw/react-codemirror": "^4.23.6",
    "bowser": "^2.11.0",
    "codemirror-json5": "^1.0.3",
    "dexie": "^4.0.10",
    "dexie-react-hooks": "^1.1.7",
    "file-saver": "^2.0.5",
    "json5": "^2.2.3",
    "react-window": "^1.8.10",
    "split-pane-react": "^0.1.3",
    "wasm-feature-detect": "^1.8.0"
  }
}
